<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="rl_user_center">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_38_percent</item>
    </style>

    <style name="iv_user_center">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="tv_user_center">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_marginLeft">24dp</item>
    </style>

    <style name="iv_user_center_arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@mipmap/icon_mine_right_b</item>
    </style>

    <style name="ll_user_center_my_order">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="iv_user_center_my_order">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="tv_user_center_my_order">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="rl_order_detail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="tv_order_detail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="tv_order_detail_2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">80dp</item>
    </style>

    <style name="item_rl">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="item_text">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="user_info_relativelayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/login_edit_bg</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="rl_personal_profile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">41dp</item>
    </style>

    <style name="tv_personal_profile_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/library_text_color_3</item>
    </style>

    <style name="iv_personal_profile_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="tv_personal_profile_right_light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/library_text_color_6</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="tv_personal_profile_right_grey">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/library_text_color_9</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="tv_personal_profile_right_red">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/library_support_color_red</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="iv_personal_profile_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:src">@mipmap/mine_arrow</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

</resources>
