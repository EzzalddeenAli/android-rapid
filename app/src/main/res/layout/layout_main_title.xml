<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/px28dp"
              android:layout_marginRight="@dimen/px28dp"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px88dp">

       <RelativeLayout
           android:id="@+id/rl_location"
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <ImageView
               android:id="@+id/iv_home_place"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:src="@mipmap/icon_home_weizhi"/>

           <TextView
               android:id="@+id/tv_home_location"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:layout_marginLeft="@dimen/px16dp"
               android:layout_toRightOf="@id/iv_home_place"
               android:maxLength="8"
               android:textColor="@color/tab_color"
               android:textSize="@dimen/px28sp"/>

           <ImageView
               android:id="@+id/iv_home_down"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:layout_marginLeft="@dimen/px16dp"
               android:layout_toRightOf="@id/tv_home_location"
               android:src="@mipmap/icon_home_down"/>

       </RelativeLayout>

        <ImageView
            android:id="@+id/iv_home_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_home_mine"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px80dp"
        android:layout_marginLeft="@dimen/px28dp"
        android:layout_marginRight="@dimen/px28dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/px10dp"
        android:paddingTop="@dimen/px10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rounded_rectangle_background"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_home_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/px20dp"
                android:layout_marginRight="@dimen/px20dp"
                android:src="@mipmap/icon_home_sousuo"/>

            <EditText
                android:id="@+id/et_home_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/px20dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入商品名称"
                android:textColorHint="#d7d7d7"
                android:textSize="@dimen/px28sp"/>

            <ImageView
                android:id="@+id/iv_home_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/px28dp"
                android:src="@mipmap/delete"
                android:visibility="gone"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_home_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px20dp"
            android:layout_marginRight="@dimen/px20dp"
            android:visibility="gone"
            android:text="搜索"/>

    </LinearLayout>

</LinearLayout>