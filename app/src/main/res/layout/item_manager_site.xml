<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    android:id="@+id/swipeLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_white_1000">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@color/library_support_color_red"
            android:text="删除"
            android:textColor="@color/md_white_1000"
            android:textSize="12sp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px108dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/px28dp">

            <TextView
                android:id="@+id/tv_site_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="南大路458号"
                android:textColor="@color/text_black"
                android:textSize="@dimen/px28sp"/>

            <TextView
                android:id="@+id/tv_site_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_site_address"
                android:layout_marginTop="@dimen/px16dp"
                android:text="某某某"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/px28sp"/>

            <TextView
                android:id="@+id/tv_site_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_site_name"
                android:layout_marginLeft="@dimen/px28dp"
                android:layout_toRightOf="@id/tv_site_name"
                android:text="13333333333"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/px28sp"/>

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_change_address"
            android:layout_width="@dimen/px128dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_site_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_address_xiugai"/>

            <TextView
                android:id="@+id/tv_site_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px12dp"
                android:text="修改"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/px24sp"/>
        </LinearLayout>

        <View
            android:id="@+id/view_line"
            android:layout_width="@dimen/px2dp"
            android:layout_height="@dimen/px86dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/ll_change_address"
            android:background="@color/line"/>

    </RelativeLayout>

</com.daimajia.swipe.SwipeLayout>