<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <com.lh.rapid.ui.widget.MyActionBar
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2dp"
        android:background="@color/color_efeff4"/>


    <LinearLayout
        android:layout_width="@dimen/px680dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/px118dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px80dp"
            android:layout_marginTop="@dimen/px40dp"
            android:background="@drawable/user_login_bg">

            <EditText
                android:id="@+id/et_old_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/px24dp"
                android:background="@null"
                android:hint="请输入旧密码"
                android:inputType="textPassword"
                android:textColor="@color/search_gray"
                android:textSize="@dimen/px28sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px80dp"
            android:layout_marginTop="@dimen/px40dp"
            android:background="@drawable/user_login_bg">

            <EditText
                android:id="@+id/et_new_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px24dp"
                android:background="@null"
                android:hint="请输入新密码"
                android:inputType="textPassword"
                android:textColor="@color/search_gray"
                android:textSize="@dimen/px28sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px80dp"
            android:layout_marginTop="@dimen/px40dp"
            android:background="@drawable/user_login_bg">

            <EditText
                android:id="@+id/et_new_password_again"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px24dp"
                android:background="@null"
                android:hint="请再次输入新密码"
                android:inputType="textPassword"
                android:textColor="@color/search_gray"
                android:textSize="@dimen/px28sp"/>
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="@dimen/px280dp"
        android:layout_height="@dimen/px68dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/px40dp"
        android:background="@drawable/user_login_bt_bg"
        android:text="@string/sure"
        android:textColor="@color/white"
        android:textSize="@dimen/px32sp"/>

</LinearLayout>