<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include
        layout="@layout/title_normal"/>

    <View style="@style/line_10_f1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_name"
            android:layout_alignTop="@id/tv_name"
            android:layout_marginLeft="48dp"/>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:textColor="#dd000b"/>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="3dp"
            android:maxLines="2"/>

    </RelativeLayout>

    <View style="@style/line_10_f1"/>

    <RelativeLayout
        style="@style/rl_order_detail">

        <TextView
            style="@style/tv_order_detail"
            android:text="订单号:"/>

        <TextView
            android:id="@+id/tv_order_no"
            style="@style/tv_order_detail_2"/>

    </RelativeLayout>

    <View style="@style/line_05_f1"/>

    <RelativeLayout
        style="@style/rl_order_detail">

        <TextView
            style="@style/tv_order_detail"
            android:text="下单时间:"/>

        <TextView
            android:id="@+id/tv_start_time"
            style="@style/tv_order_detail_2"/>

    </RelativeLayout>

    <View style="@style/line_05_f1"/>

    <RelativeLayout
        style="@style/rl_order_detail">

        <TextView
            style="@style/tv_order_detail"
            android:text="送达时间:"/>

        <TextView
            android:id="@+id/tv_end_time"
            style="@style/tv_order_detail_2"/>

    </RelativeLayout>

    <View style="@style/line_10_f1"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        style="@style/line_1_f1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单金额:"
                android:textColor="@color/library_text_color_3"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#dd000b"
                android:textSize="16sp"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>