<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_minus"
        android:layout_width="@dimen/select_num_width"
        android:layout_height="@dimen/select_num_width"
        android:contentDescription="@null"
        android:scaleType="center"
        android:src="@mipmap/icon_home_minus" />

    <TextView
        android:id="@+id/tv_quantity"
        android:layout_width="@dimen/px88dp"
        android:layout_height="@dimen/select_num_width"
        android:gravity="center"
        android:textColor="@color/text_black"
        android:textSize="@dimen/px32sp" />

    <ImageView
        android:id="@+id/iv_plus"
        android:layout_width="@dimen/select_num_width"
        android:layout_height="@dimen/select_num_width"
        android:contentDescription="@null"
        android:scaleType="center"
        android:src="@mipmap/icon_home_add" />

</LinearLayout>