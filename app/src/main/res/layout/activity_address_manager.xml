<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.lh.rapid.ui.widget.MyActionBar
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_manage_address"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2dp"
        android:background="@color/line"/>

    <LinearLayout
        android:id="@+id/ll_manage_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px98dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_address_add"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/px32dp"
            android:textColor="@color/tab_color"
            android:text="新增收货地址"
            android:layout_marginLeft="@dimen/px16dp"/>

    </LinearLayout>

</LinearLayout>
