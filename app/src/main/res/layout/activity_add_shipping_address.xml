<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/md_white_1000">

    <com.lh.rapid.ui.widget.MyActionBar
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/actionbar"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_name"
                style="@style/item_rl">

                <TextView
                    android:id="@+id/text_name"
                    style="@style/item_text"
                    android:text="联系人\u0020\u0020\u0020\u0020"/>

                <EditText
                    android:id="@+id/edit_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/text_name"
                    android:background="@null"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"/>

            </RelativeLayout>

            <View style="@style/line_05_f1"/>

            <RelativeLayout
                android:id="@+id/rl_phone"
                style="@style/item_rl">

                <TextView
                    android:id="@+id/text_phone"
                    style="@style/item_text"
                    android:text="电话\u0020\u0020\u0020\u0020\u0020\u0020"
                    />

                <EditText
                    android:id="@+id/edit_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/text_phone"
                    android:background="@null"
                    android:inputType="phone"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"/>

            </RelativeLayout>

            <View style="@style/line_05_f1"/>

            <RelativeLayout
                android:id="@+id/rl_address"
                style="@style/item_rl">

                <TextView
                    android:id="@+id/text_address"
                    style="@style/item_text"
                    android:text="地址\u0020\u0020\u0020\u0020\u0020\u0020"
                    />

                <TextView
                    android:id="@+id/edit_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/text_address"
                    android:background="@null"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"/>

            </RelativeLayout>

            <View style="@style/line_05_f1"/>

            <RelativeLayout
                android:id="@+id/rl_house_number"
                style="@style/item_rl">

                <TextView
                    android:id="@+id/text_house_number"
                    style="@style/item_text"
                    android:text="门牌号\u0020\u0020\u0020\u0020"
                    />

                <EditText
                    android:id="@+id/edit_house_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/text_house_number"
                    android:background="@null"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:singleLine="true"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"/>

            </RelativeLayout>

            <View style="@style/line_05_f1"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <Button
                    android:id="@+id/btn_save_address"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/shape_button"
                    android:text="保存地址"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>