<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/md_white_1000"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.lh.rapid.ui.widget.MyActionBar
            android:id="@+id/actionbar"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="24dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="厨易时代"
            android:textColor="@color/tab_color"
            />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:textColor="@color/md_grey_500"
            android:layout_marginTop="@dimen/px10dp"
            />

        <View
            style="@style/line_05_f1"/>

        <RelativeLayout
            style="@style/rl_personal_profile"
            android:layout_height="48dp">

            <TextView
                style="@style/tv_personal_profile_left"
                android:text="关注微信"
                android:textSize="14sp"/>

            <ImageView
                style="@style/iv_user_center_arrow"
                android:layout_marginRight="16dp"/>

        </RelativeLayout>

        <View
            style="@style/line_05_f1"/>

        <RelativeLayout
            android:id="@+id/rl_cache"
            style="@style/rl_personal_profile"
            android:layout_height="48dp">

            <TextView
                style="@style/tv_personal_profile_left"
                android:text="清除缓存"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_cache"
                style="@style/tv_personal_profile_right_grey"
                android:layout_alignParentRight="true"
                android:layout_marginRight="32dp"
                />

            <ImageView
                style="@style/iv_user_center_arrow"
                android:layout_marginRight="16dp"/>

        </RelativeLayout>

        <View
            style="@style/line_05_f1"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_margin="12dp"
        android:background="@drawable/user_login_bt_bg"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="@dimen/px32sp"/>


</RelativeLayout>