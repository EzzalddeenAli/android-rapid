<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv_cart_pd_pic"
        android:layout_width="@dimen/px188dp"
        android:layout_height="@dimen/px188dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/px28dp"
        android:layout_marginLeft="@dimen/px28dp"
        android:layout_marginTop="@dimen/px28dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_cart_pd_state"
        android:layout_width="@dimen/px188dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_cart_pd_pic"
        android:layout_alignLeft="@id/iv_cart_pd_pic"
        android:background="@color/search_transparent_bg"
        android:gravity="center"
        android:padding="2dp"
        android:textColor="@color/white"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_cart_pd_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_cart_pd_pic"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="@dimen/px28dp"
        android:layout_toRightOf="@id/iv_cart_pd_pic"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/text_black"
        android:textSize="@dimen/px28sp" />

    <TextView
        android:id="@+id/tv_cart_pd_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_cart_pd_name"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/iv_cart_pd_pic"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/px20sp" />

    <TextView
        android:id="@+id/tv_cart_pd_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignBottom="@id/iv_cart_pd_pic"
        android:layout_alignLeft="@id/tv_cart_pd_name"
        android:layout_toRightOf="@id/iv_cart_pd_pic"
        android:textColor="@color/red_text"
        android:textSize="@dimen/px28sp" />


    <TextView
        android:id="@+id/tv_cart_pd_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_cart_pd_pic"
        android:layout_alignRight="@id/tv_cart_pd_name"/>

</RelativeLayout>