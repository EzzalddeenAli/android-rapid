<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px68dp"
    android:paddingLeft="@dimen/px28dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_cart_gpt_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_shoppingtrolley_choose__n"/>

    <TextView
        android:id="@+id/tv_cart_name_quan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_cart_gpt_choose"
        android:layout_marginLeft="@dimen/px20dp"
        android:textSize="@dimen/px32sp"
        android:textColor="@color/text_black"/>

</RelativeLayout>